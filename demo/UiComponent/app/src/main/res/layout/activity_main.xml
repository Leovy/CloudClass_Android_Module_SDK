<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".MainActivity">

  <com.example.xianxueliang.uicomponent.SupportSlidingTabLayout
    android:id="@+id/tl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingStart="3dp"
      android:paddingEnd="0dp"
      app:tl_indicator_color="#6483e9"
      app:tl_indicator_corner_radius="2dp"
      app:tl_indicator_height="3dp"
      app:tl_indicator_style="NORMAL"
      app:tl_indicator_width="18dp"
      app:tl_selectedTextSize="22sp"
      app:tl_selectedTextStyle="bold"
      app:tl_tab_padding="0dp"
      app:tl_textPaddingBottom="4dp"
      app:tl_textSelectColor="#222222"
      app:tl_textUnselectColor="#777777"
      app:tl_unselectedTextSize="16sp"
      app:tl_unselectedTextStyle="normal"
    />

  <android.support.v4.view.ViewPager
    android:id="@+id/vp_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</LinearLayout>