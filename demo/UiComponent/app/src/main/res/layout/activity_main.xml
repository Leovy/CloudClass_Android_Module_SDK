<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".MainActivity">

  <com.example.xianxueliang.uicomponent.SupportSlidingTabLayout
    android:id="@+id/tl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="#4B00FF00"
    app:tl_selectedTextSize="25sp"
    app:tl_unselectedTextSize="18sp"
    app:tl_selectedTextStyle="bold"
    app:tl_unselectedTextStyle="normal"
    app:tl_textPaddingBottom="5dp"
    app:tl_tab_padding="15dp"
    app:tl_textSelectColor="#222222"
    app:tl_textUnselectColor="#666666"
    app:tl_indicator_color="#6483e9"
    app:tl_indicator_width="17dp"
    app:tl_indicator_height="3dp"
    app:tl_indicator_corner_radius="3dp"
    />

  <android.support.v4.view.ViewPager
    android:id="@+id/vp_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</LinearLayout>